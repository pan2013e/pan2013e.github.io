                    <h2><%= page.title %></h2>
                <!-- </div> -->
            <!-- <% } %> -->
        </a>

        <div class="nexmoe-post-meta nexmoe-rainbow">
            <a style="padding: 8px 10px;"><i class="nexmoefont icon-calendar-fill"></i><%- date(page.date) %></a>
            <a style="padding: 8px 10px;"><i class="nexmoefont icon-areachart"></i><%= wordcount(page.content) %> words</a>
